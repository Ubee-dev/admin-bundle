{% set originalProperty = field.customOptions.media_property ?? null %}
{% set media = ea.entityInstance[originalProperty] ?? null %}

{{ dump(media) }}
<div style="border: 2px dashed red;">MEDIA TEMPLATE</div>
{% if media %}
    <div class="mb-2">
        <img src="{{ media.getUrl() }}" style="max-height:200px;" />
    </div>
{% endif %}

{{ form_widget(field.form) }}
